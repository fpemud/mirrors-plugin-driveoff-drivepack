<?xml version="1.0" encoding="utf-8"?>
<plugin id="driveoff-drivepack">
  <file-mirror id="driveoff-drivepack">
    <name>Driveoff Driver Pack</name>
    <data-directory>driveoff-drivepack</data-directory>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <cron-expression>0 0 * * 0</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
</plugin>
